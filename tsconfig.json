{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Bundler",
    "target": "ES2020",

    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true
  },
  "include": ["src/**/*.ts", "*.ts"],
  "exclude": ["node_modules"]
}
